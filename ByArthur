--[[
    üõ°Ô∏è GOD MODE ELITE ‚Äî RAYFIELD EDITION
    Desenvolvido para: Universal Prime Hub
    Sistema: Regenera√ß√£o Cont√≠nua via RunService.Stepped
]]

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "üåê UNIVERSAL PRIME HUB | God Mode Elite",
   LoadingTitle = "Iniciando Protocolo de Defesa...",
   LoadingSubtitle = "by Arthur",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false 
})

-- Vari√°veis de Controle
_G.GodModeAtivo = true
local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")

-- P√ÅGINA DE PROTE√á√ÉO
local Tab = Window:CreateTab("Prote√ß√£o üõ°Ô∏è", 4483362458)

Tab:CreateSection("Status do Sistema")

Tab:CreateToggle({
   Name = "Vida Infinita (Stepped Regen)",
   CurrentValue = true,
   Callback = function(Value)
      _G.GodModeAtivo = Value
      Rayfield:Notify({
         Title = "God Mode",
         Content = Value and "Protocolo de Imunidade Ativado" or "Protocolo Desativado",
         Duration = 3
      })
   end,
})

Tab:CreateSection("Informa√ß√µes T√©cnicas")
Tab:CreateParagraph({Title = "Como funciona?", Content = "Este script utiliza o evento Stepped para restaurar sua vida mil√©simos de segundo antes da f√≠sica do jogo processar o dano, garantindo total imunidade."})

-- LOOP DE VIDA INFINITA (A ALMA DO SCRIPT)
-- O Stepped √© executado antes da simula√ß√£o f√≠sica
RunService.Stepped:Connect(function()
    if _G.GodModeAtivo then
        pcall(function()
            local char = player.Character
            if char and char:FindFirstChild("Humanoid") then
                local hum = char.Humanoid
                
                -- Mant√©m a vida no m√°ximo absoluto constantemente
                hum.Health = hum.MaxHealth
                
                -- Previne que o estado 'Dead' seja ativado por danos fatais
                if hum:GetState() == Enum.HumanoidStateType.Dead then
                    hum:ChangeState(Enum.HumanoidStateType.GettingUp)
                    hum.Health = hum.MaxHealth
                end
            end
        end)
    end
end)

Rayfield:Notify({
   Title = "Sistema Carregado",
   Content = "O God Mode Stepped est√° pronto para uso!",
   Duration = 5
})
